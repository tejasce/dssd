SOLIB := lib$(LIB).so
OBJS := $(SRCS:%.c=%.o)
CFLAGS += -fPIC
INSTALL_DST := $(DESTDIR)/lib

all: $(SOLIB)

$(SOLIB): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $@ -shared -Wl,-soname,$(SOLIB) $(LDLIBS)

%.o: %.c
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(OBJS) $(CLEANFILES)

clobber: clean
	rm -rf $(SOLIB) $(CLOBBERFILES) $(INSTALL_DST)


install: all
	mkdir -p $(INSTALL_DST)
	install -m 0755 -D $(SOLIB) $(INSTALL_DST)
